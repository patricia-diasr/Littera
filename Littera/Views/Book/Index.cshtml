@{
    ViewData["Title"] = "Livros";
}
<style>

    .book-cover {
        width: 120px;
        height: 180px;
        object-fit: cover;
        border-radius: 8px;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease;
    }

        .book-cover:hover {
            transform: translateY(-3px);
        }

    .section-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin: 30px 0 15px;
        color: var(--bs-secondary);
        padding-bottom: 5px;
        border-bottom: 1px solid var(--bs-light);
    }

    .floating-button {
        position: fixed;
        bottom: 30px;
        right: 30px;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        font-size: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: var(--bs-primary);
        border: none;
    }

        .floating-button:hover {
            background-color: #46c5ae;
        }

    .search-input {
        border-radius: 20px;
        padding-left: 15px;
        border: 1px solid #ddd;
    }

        .search-input:focus {
            border-color: var(--bs-primary);
            box-shadow: 0 0 0 0.25rem rgba(85, 214, 190, 0.25);
        }
</style>

<div class="container">
    <div class="mb-4 d-flex justify-content-center mt-4">
        <input type="text" class="form-control w-50 search-input" placeholder="Pesquisar">
    </div>

    <div>
        <div class="section-title mt-5">Lendo</div>
        <div class="d-flex gap-3 flex-wrap">
            <a asp-controller="Book" asp-action="Details" asp-route-title="Promessas Cruéis">
                <img src="https://m.media-amazon.com/images/I/81ldnvmlicL._SL1500_.jpg" class="book-cover" alt="Promessas Cruéis">
            </a>
            <a asp-controller="Book" asp-action="Details" asp-route-title="A missão traiçoeira">
                <img src="https://m.media-amazon.com/images/I/81doFJKQH5L._SY425_.jpg" class="book-cover" alt="A missão traiçoeira">
            </a>
        </div>
    </div>

    <div>
        <div class="section-title mt-5">Quero Ler</div>
        <div class="d-flex gap-3 flex-wrap">
            <a asp-controller="Book" asp-action="Details" asp-route-title="Amanhecer na colheita">
                <img src="https://m.media-amazon.com/images/I/71fEYN72-UL._SY425_.jpg" class="book-cover" alt="Amanhecer na colheita">
            </a>
            <a asp-controller="Book" asp-action="Details" asp-route-title="O Circo da Noite">
                <img src="https://m.media-amazon.com/images/I/81mQNpDPIuL._SL1500_.jpg" class="book-cover" alt="O Circo da Noite">
            </a>
            <a asp-controller="Book" asp-action="Details" asp-route-title="Espreitador e Outras Histórias">
                <img src="https://a-static.mlcdn.com.br/1500x1500/livro-ordem-paranormal-o-espreitador-e-outras-historias/cliquebooks/886525-6/9b4fb8777173fe4c2f978a90cccb0eb9.jpeg" class="book-cover" alt="Espreitador e Outras Histórias">
            </a>
        </div>
    </div>

    <div>
        <div class="section-title mt-5">Lido</div>
        <div class="d-flex gap-3 flex-wrap">
            <a asp-controller="Book" asp-action="Details" asp-route-title="Verity">
                <img src="https://m.media-amazon.com/images/I/51ABRx3d7GL._SY445_SX342_.jpg" class="book-cover" alt="Verity">
            </a>
            <a asp-controller="Book" asp-action="Details" asp-route-title="Assistente do Vilão">
                <img src="https://m.media-amazon.com/images/I/81DkKVIavBL._SY425_.jpg" class="book-cover" alt="Assistente do Vilão">
            </a>
            <a asp-controller="Book" asp-action="Details" asp-route-title="Os sete maridos de Evelyn Hugo">
                <img src="https://m.media-amazon.com/images/I/91aRbGB8IFL._SY425_.jpg" class="book-cover" alt="Os sete maridos de Evelyn Hugo">
            </a>
        </div>
    </div>
</div>

<button class="btn floating-button">
    <i class="bi bi-plus-lg text-white fs-5"></i>
</button>