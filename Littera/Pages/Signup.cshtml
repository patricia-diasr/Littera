@page
@model Littera.Pages.SignupModel
@{
}

<style>
    body {
        background-color: rgba(0, 0, 0, 0.5);
        background-image: url('https://images.unsplash.com/photo-1507842217343-583bb7270b66?ixlib=rb-1.2.1&auto=format&fit=crop&w=1920&q=80');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-blend-mode: overlay;
        position: relative;
    }

    .login-container {
        max-width: 1000px;
        width: 90%;
        margin: 0 auto;
        display: flex;
        box-shadow: var(--shadow-lg);
        border-radius: var(--radius-lg);
        overflow: hidden;
        background-color: var(--bs-light);
        position: relative;
    }

    .login-left {
        flex: 1;
        background: linear-gradient(135deg, var(--header-bg) 0%, rgba(25, 40, 65, 0.9) 100%);
        padding: 3rem;
        color: white;
        display: flex;
        flex-direction: column;
        justify-content: center;
        position: relative;
        overflow: hidden;
    }

        .login-left::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='%23ffffff' fill-opacity='0.05' fill-rule='evenodd'/%3E%3C/svg%3E");
            opacity: 0.6;
            z-index: 0;
        }

    .login-logo {
        position: relative;
        z-index: 1;
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
        display: flex;
        align-items: center;
    }

    .login-subtitle {
        position: relative;
        z-index: 1;
        font-size: 1.2rem;
        opacity: 0.9;
        margin-bottom: 2rem;
    }

    .login-features {
        position: relative;
        z-index: 1;
        margin-top: 2rem;
    }

    .login-feature-item {
        display: flex;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .login-feature-icon {
        background-color: rgba(255, 255, 255, 0.2);
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1rem;
        flex-shrink: 0;
    }

    .login-feature-text {
        font-size: 1rem;
    }

    .login-right {
        flex: 1;
        padding: 3rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .login-header-right {
        text-align: center;
        margin-bottom: 2rem;
    }

    .login-title {
        font-size: 2rem;
        font-weight: 700;
        color: var(--bs-dark);
        margin-bottom: 0.5rem;
    }

    .login-description {
        color: var(--bs-secondary);
        margin-bottom: 2rem;
    }

    .form-floating {
        margin-bottom: 1.5rem;
    }

    .form-control {
        height: calc(3.5rem + 2px);
        padding: 1rem 0.75rem;
        border-radius: var(--radius-md);
        border: 1px solid var(--bs-gray-200);
        transition: all var(--transition-fast);
    }

        .form-control:focus {
            border-color: var(--bs-primary);
            box-shadow: 0 0 0 0.15rem rgba(85, 214, 190, 0.25);
        }

    .form-floating label {
        padding: 1rem 0.75rem;
    }

    .login-options {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .forgot-password {
        color: var(--bs-primary);
        font-weight: 500;
        text-decoration: none;
        transition: color var(--transition-fast);
    }

        .forgot-password:hover {
            color: var(--bs-primary-hover);
            text-decoration: underline;
        }

    .btn-login {
        width: 100%;
        padding: 0.8rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        border-radius: var(--radius-md);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .divider {
        display: flex;
        align-items: center;
        margin: 1.5rem 0;
        color: var(--bs-secondary);
    }

        .divider::before,
        .divider::after {
            content: "";
            flex: 1;
            border-bottom: 1px solid var(--bs-gray-200);
        }

        .divider::before {
            margin-right: 1rem;
        }

        .divider::after {
            margin-left: 1rem;
        }

    .register-link {
        text-align: center;
        margin-top: 1.5rem;
        font-size: 1rem;
    }

        .register-link a {
            color: var(--bs-primary);
            font-weight: 500;
            text-decoration: none;
            transition: color var(--transition-fast);
        }

            .register-link a:hover {
                color: var(--bs-primary-hover);
                text-decoration: underline;
            }

    .book-decoration {
        position: absolute;
        bottom: -50px;
        right: -30px;
        opacity: 0.1;
        transform: rotate(-15deg);
        font-size: 15rem;
        color: #ffffff;
    }

    .validation-summary-errors ul {
        list-style: none;
        padding-left: 0;
        margin-bottom: 0;
    }

    @@media (max-width: 992px) {
        .login-container {
            flex-direction: column;
            width: 95%;
            max-width: 600px;
        }

        .login-left {
            padding: 2.5rem;
        }

        .login-right {
            padding: 2.5rem;
        }
    }

    @@media (max-width: 576px) {
        main {
            padding: 1rem 0;
        }

        .login-container {
            width: 100%;
            border-radius: 0;
            box-shadow: none;
        }

        .login-left {
            padding: 2rem 1.5rem;
        }

        .login-right {
            padding: 2rem 1.5rem;
        }

        .login-logo {
            font-size: 2.5rem;
        }

        .login-feature-item {
            margin-bottom: 1rem;
        }

        .login-title {
            font-size: 1.75rem;
        }
    }
</style>

<div class="login-container">
    <div class="login-left">
        <div class="login-logo">
            <i class="bi bi-book me-2"></i>Littera
        </div>
        <p class="login-subtitle">Sua biblioteca digital pessoal</p>

        <div class="login-features">
            <div class="login-feature-item">
                <div class="login-feature-icon">
                    <i class="bi bi-search"></i>
                </div>
                <div class="login-feature-text">
                    Organize sua coleção de livros
                </div>
            </div>
            <div class="login-feature-item">
                <div class="login-feature-icon">
                    <i class="bi bi-bookmark-heart"></i>
                </div>
                <div class="login-feature-text">
                    Acompanhe suas leituras favoritas
                </div>
            </div>
            <div class="login-feature-item">
                <div class="login-feature-icon">
                    <i class="bi bi-graph-up"></i>
                </div>
                <div class="login-feature-text">
                    Estabeleça e acompanhe metas de leitura
                </div>
            </div>
        </div>

        <i class="bi bi-book-half book-decoration"></i>
    </div>

    <div class="login-right">
        <div class="login-header-right">
            <h2 class="login-title">Seja bem-vindo!</h2>
            <p class="login-description">Faça um cadastro para continuar</p>
        </div>

        <form method="post">
            <div class="form-floating">
                <input type="text" class="form-control" id="name" name="Name" placeholder="Seu nome" required>
                <label for="name">Nome</label>
            </div>
            <div class="form-floating">
                <input type="email" class="form-control" id="email" name="Email" placeholder="nome@exemplo.com" required>
                <label for="email">E-mail</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" id="password" name="Password" placeholder="Senha" required>
                <label for="password">Senha</label>
            </div>

            <button type="submit" class="btn btn-warning btn-login">
                <i class="bi bi-box-arrow-in-right me-2"></i>Cadastrar
            </button>

            <div asp-validation-summary="All" class="text-danger"></div>
        </form>

        <div class="register-link">
            Já possuí uma conta? <a asp-area="" asp-page="/Signin">Faça login</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}